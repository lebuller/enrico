FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.015;

boundaryField
{
    modInlet
    {
        type            turbulentIntensityKineticEnergyInlet;
        intensity       0.02;       // 5% turbulent intensity
        value           $internalField;
    }
    modOutlet
    {
        type            inletOutlet;
        inletValue      $internalField;
    }
    modInner
    {
        type            kqRWallFunction;
        value           uniform 0;
    }
    modOuter
    {
        type            zeroGradient;
    }
}


// ************************************************************************* //
