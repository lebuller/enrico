FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/bottomWater";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 523.15;

boundaryField
{
    modInlet
    {
        type            fixedValue;
        value           uniform 523.15;
    }
    modOutlet
    {
        type            zeroGradient;
//        type            inletOutlet;
        value           uniform 523.15;
//        inletValue      uniform 523.15;
    }
    modInner
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
//        type            fixedValue;
        value           uniform 600;
        Tnbr            T;
        kappaMethod     fluidThermo;
    }
    modOuter
    {
        type            zeroGradient;
        value           uniform 523.15;
    }
}


